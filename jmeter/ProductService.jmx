          <stringProp name="cacheKey">true</stringProp>
          <stringProp name="script">import com.github.javafaker.Faker
import groovy.json.JsonOutput

def faker = new Faker()

def product = [
    name   				: faker.commerce().productName(),
    mdFormatDescription		: &quot;**&quot; + faker.lorem().paragraph().take(100) + &quot;**&quot;,
    mainImageUrl			: faker.internet().image(),
    price					: new BigDecimal(faker.commerce().price().replace(&quot;,&quot;, &quot;.&quot;))
]

def productJson = JsonOutput.toJson(product)

vars.put(&quot;productJson&quot;, productJson)

log.info(&quot;Generated product JSON: &quot; + productJson)</stringProp>
